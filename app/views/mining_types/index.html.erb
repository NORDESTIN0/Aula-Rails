<p id="notice"><%= notice %></p>

<h1>Mining Types</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.name %></td>
        <td><%= mining_type.title %></td>
        <td><%= link_to t('links.show'), mining_type %></td>
        <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to t('links.delete'), mining_type, method: :delete, data: { confirm: t('links.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_mining_type_path do %>
<%= button_tag "New Mining Type", class:"btn btn-primary col-md-1" %>
<% end %>
<%= link_to root_path do %>
<%= button_tag "Menu", class:"btn btn-primary col-md-1" %>
<% end %>
