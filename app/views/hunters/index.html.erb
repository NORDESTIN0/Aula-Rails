<p id="notice"><%= notice %></p>

<h1>Hunters</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Gun</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hunters.each do |hunter| %>
      <tr>
        <%= render "hunters/hunter_info/index_description", hunter: hunter if hunter %>
        <td><%= link_to 'Show', hunter %></td>
        <td><%= link_to 'Edit', edit_hunter_path(hunter) %></td>
        <td><%= link_to 'Destroy', hunter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to new_hunter_path do %>
<%= button_tag "New Hunter", class:"btn btn-primary col-md-1" %>
<% end %>

<%= link_to root_path do %>
<%= button_tag "Menu", class:"btn btn-primary col-md-1" %>
<% end %>
